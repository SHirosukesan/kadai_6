<div class="container">
              <% if @book.errors.any? %>
                <div class="alert alert-warning">
                  <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
                  <ul>
                    <% @book.errors.full_messages.each do |error| %>
                      <li><%= error %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
    <div class="row">
              <div class="col-xs-3">
                    <%= render 'books/form', book: @book,user: @user %>
              </div>
            <div class="col-xs-9">
                <h2>Books</h2>
                <table class="table table-inverse">
                  <thead>
                    <tr>
                      <th></th>
                      <th><b>Title</b></th>
                      <th><b>Opinion</b></th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tbody>
                      <% @books.each do |book| %>
                         <tr>
                          <td>
                           <%= link_to user_path(book.user.id) do %>
                             <%= attachment_image_tag(book.user, :profile_image, fallback: "no-image.jpg", size:'50x50') %>
                           <% end %>
                          </td>
                             <td><%=link_to book.title,book_path(book.id) %></td>
                             <td><%= book.body %></td>


                          <td>
                          <td id="favorites<%= book.id %>">
                          <%= render 'books/favorites', book:book%>
                          </td>
                          <!-- いいね機能 -->
                          <td>コメント数：<%= book.book_comments.count %></td>
                        </tr>
                      <% end %>
                 </tbody>
              </table>
         </div>
    </div>
 </div>

