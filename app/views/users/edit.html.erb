<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6" >
				<h1>User info</h1>

			 <% if @user.errors.any? %>
              <div class="alert alert-warning">
                <h2><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
                <ul>
                  <% @user.errors.full_messages.each do |error| %>
                    <li><%= error %></li>
                  <% end %>
                </ul>
              </div>
              <% end %>
				<!-- form_for部分 -->
				<div>
					<%= form_for(@user) do |f| %>
					  <span><b>Name</b> <%= f.text_field :name%></span>
					  <p><b>Image</b></p>
					  <%= f.attachment_field :profile_image %>
					  <br>
					  <span><b>Introduction</b> <%= f.text_area :introduction %></span>
					  <!-- 追加部分 -->
					  <br>
					  <br>
					<%= f.submit %>
				<% end %>
       </div>
    </div>
</div>